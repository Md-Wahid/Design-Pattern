                </div> *@

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    @Html.ActionLink("Back to Employee List", "Index", "Employee", "", new { @class="btn btn-secondary"})
                </div>
        </form>

    </div>
</div>

