@model NonGenericRepositoryPattern.Models.Employee

@{
    ViewBag.Title = "Add Employee";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddEmployee" method="post">
            @Html.AntiForgeryToken()

                <h4>Add Employee</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Employee Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    @* <input asp-for="Gender" class="form-control" placeholder="Employee Gender"> *@

                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" id="Gender1" value="Male">
                    <label class="form-check-label" asp-for="Gender" for="Gender1">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" id="Gender2" value="Female">
                    <label class="form-check-label" asp-for="Gender" for="Gender2">
                        Female
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" id="Gender3" value="Other">
                    <label class="form-check-label" asp-for="Gender" for="Gender3">
                        Other
                    </label>
                </div>

                    <span asp-validation-for="Gender"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary"></label>
                    <input asp-for="Salary" class="form-control" placeholder="Employee Salary">
                    <span asp-validation-for="Salary"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dept"></label>
                    <input asp-for="Dept" class="form-control" placeholder="Employee Dept">
                    <span asp-validation-for="Dept"></span>
                </div>
